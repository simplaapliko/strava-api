<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/list_athlete_activities"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Athlete Activities"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_activity"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an Activity"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/get_activity"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Activity"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/get_activity_comments"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Activity Comments"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/get_activity_kudos"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Activity Kudos"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/get_activity_laps"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Activity Laps"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/get_activity_zones"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Activity Zones"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/update_activity"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Activity"
        />

    <include layout="@layout/include_response" />

</LinearLayout>
